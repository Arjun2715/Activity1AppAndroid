<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#3B429F"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:text="@string/e_books"
        android:textAlignment="center"
        android:textColor="#F5D7E3"
        android:textColorHighlight="#AA7DCE"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--non_fiction_books books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/non_fiction_books"
                android:textSize="20sp" />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:src="@drawable/a15"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a2" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a3" />


                </LinearLayout>
            </HorizontalScrollView>

            <!--fiction_books books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/Sci_fiction_books"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a6" />

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a9" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a11" />
                </LinearLayout>
            </HorizontalScrollView>


            <!--lifestyle books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/lifestyle"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:src="@drawable/a12"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a13" />

                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a14" />
                </LinearLayout>
            </HorizontalScrollView>

            <!--Mystery books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/mystery"
                android:textSize="20sp" />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a16" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a17" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a18" />
                </LinearLayout>
            </HorizontalScrollView>

            <!--Mystery books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/cyberpunk"
                android:textSize="20sp" />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a19" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a20" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a22" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>